<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elo.android.multiclientinputmethod">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/demo_log"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/demo_log"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <service android:name="com.elo.android.multiclientinputmethod.MultiClientInputMethod"
            android:label="MultiClientInputMethod"
            android:permission="android.permission.BIND_INPUT_METHOD"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.inputmethodservice.MultiClientInputMethodService"/>
            </intent-filter>
            <meta-data android:name="android.view.im" android:resource="@xml/method"/>
        </service>
    </application>
</manifest>